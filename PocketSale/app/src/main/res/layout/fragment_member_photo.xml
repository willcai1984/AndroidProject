<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="34dp"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="12sp"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="12dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="12sp"
                    android:text="@string/company_license"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_company_license_1"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkgray" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="34dp"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="12sp"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="12dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="12sp"
                    android:text="@string/organization_code"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_organization_code_1"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkgray" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="34dp"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="12sp"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="12dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="12sp"
                    android:text="@string/other_certificates"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_other_certificates_1"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add" />
                <ImageView
                    android:id="@+id/iv_other_certificates_2"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:id="@+id/iv_other_certificates_3"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:id="@+id/iv_other_certificates_4"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:id="@+id/iv_other_certificates_5"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:id="@+id/iv_other_certificates_6"
                    android:layout_width="42dp"
                    android:layout_height="56dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pic_add"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkgray" />
    <Button
        android:id="@+id/btn_photo_submit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_fillet_purple"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>