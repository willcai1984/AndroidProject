<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_company_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="工商营业执照" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_company_license">
        <ImageView
            android:id="@+id/iv_comany_license0"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_add1"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/iv_comany_license1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_add1"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_comany_license2"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_add1"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_comany_license3"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_add1"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_comany_license4"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_add1"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>