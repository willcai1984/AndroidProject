<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bck"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.qjdchina.qjdsale.LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"></LinearLayout>

    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dip"
        android:layout_weight="1"
        android:padding="10dip">

        <LinearLayout
            android:id="@+id/ll_user_div"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_login">
            <!-- 账号 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_user"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/et_user"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:hint="请输入用户名"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/floralwhite"
                    android:textColorHint="@color/floralwhite"
                    android:textCursorDrawable="@null"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_password_div"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ll_user_div"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_login">
            <!-- 密码 text -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_passwd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/et_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:hint="请输入密码"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/floralwhite"
                    android:textColorHint="@color/floralwhite"
                    android:textCursorDrawable="@null"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5">
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_submit_div"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_password_div"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <!-- 登录button -->
            <Button
                android:id="@+id/signin_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:background="@color/gold"
                />
        </LinearLayout>

        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>

</LinearLayout>


